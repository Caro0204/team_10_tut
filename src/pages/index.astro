<style>
@import url(https://db.onlinewebfonts.com/c/cfdf18a10f253f0aa9db6db978d328c0?family=SignPainter+HouseScript);

  /* BILLEDER */
  .front_img {
    width: 100%;
    margin: 0;
	margin-bottom: 25px;
  }
   .grid1_1 {
      display: grid;
    }
 .order{
	order:-2;
  }

  /*** Text ***/
  h1 {
    font-family: "SignPainter HouseScript";
	color: #ffffff;
	font-size: 3.5rem;
	margin: 0;
	margin-bottom: 100px;
	margin-left: 7px;
  }
  h2{
	margin-left: 7px;
	margin-bottom: 30px;
	margin-top: 50px;
  }
  .text_1{
	margin-left: 7px;
	font-size: 1.9rem;
	margin-top: 0;
  }
  .text_2{
margin-left: 7px;
	font-size: 1rem;
	margin-top: 0;
  }
  /*** SVG ***/
  
 .svg{
	opacity: 65%;
	width:60%;
	padding-bottom: 150px;
	rotate: -7deg;
 }
 .grid1{
	display: flex;
	justify-content: space-between;
	
 }
 .fade_in {
  animation-name: fade_in_kf;
  animation-duration: 4s;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
  animation-timing-function: linear;
}
@keyframes fade_in_kf {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
  @media screen and (min-width: 620px) {
    .grid1_1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
	 .order{
	order:1;
  }
  h1{
	font-size: 5.5rem;
  }
    .text_1{
	font-size: 2.5rem;
  }
  .text_2{
	font-size: 1.2rem;
  }
  
  }
</style>
