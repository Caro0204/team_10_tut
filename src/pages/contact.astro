<style>
@import url(https://db.onlinewebfonts.com/c/cfdf18a10f253f0aa9db6db978d328c0?family=SignPainter+HouseScript);

section {
    display: flex;
    flex-direction: column;
}

iframe {
width: 100%;
position: relative;
}

/** icons **/
.grid1_3{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 10px;
    width: 35%;
    margin-top: -25px;
}

/** Billeder i toppen **/
.top_billede_lille{
    display: none;
}

/*****/
ul{
    list-style: none;
    padding: 0;
}
li{
    color: white;
    font-family: "Inconsolata", monospace;
    font-size: 1.3rem;
}
li a{
    color: #ffff;
    font-family: "Inconsolata", monospace;
    font-size: 1rem;
}
.farve{
    color: #ECC470;
}
.str{
    width: 90%;
}
.underoverskrift{
    font-size: 3rem;
    display: flex;
    justify-content: left;
}

  @media screen and (min-width: 620px){
    section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }
    iframe {
        filter: grayscale();
        width: 100%;
height: 100%;
padding-bottom: 8%;
position: relative;
    }

    iframe:hover {
        filter: none;
        transition: filter 0.5s ease;
    }
.grid1_1{
    grid-column: 1 / span 2;
    grid-row: 2;
}
.grid2 {
    grid-row: 1;
    margin-left: auto;
}
.grid1_3{
     width: 30%;
}
li{
    font-size: 1.7rem;
}
li a{
    font-size: 1.5rem;
}
.str{
    width: 90%;
}
ul{
list-style: none;
margin: 0;
}
.top_billede_stor{
    display: none;
}
.top_billede_lille{
    display: inline;
}

.underoverskrift{
    font-size: 3rem;
    display: flex;
    justify-content: center;
}
  }
</style>