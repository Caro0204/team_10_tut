</footer>
<style>
      .footer-columns {
      display: grid;
      gap: 20px;
      margin-top: 50px;
    }
  footer {
    max-width: 1400px;
    margin: 0 auto;
  }
  /* Style FAQ items */
  .faq-item {
    margin-bottom: 15px;
    cursor: pointer;
    border-top: 1px solid #ccc;
  }
  .linebottom {
    border-bottom: 1px solid #ccc;
  }

  .answer {
    display: none;
    margin-left: 10px;
  }
  /***** LOGO *****/
  .logo_bottom {
    width: 35%;
    margin: 0 auto;
    opacity: 50%;
  }

  .font {
    font-family: "SignPainter HouseScript";
    margin: 0;
    margin-bottom: 10px;
    color: #ecc470;
    opacity: 50%;
  }
  .center {
    text-align: center;
    font-size: 2rem;
  }
  ul {
    list-style: none;
    padding: 0;
  }
  li {
    color: white;
    font-family: "Inconsolata", monospace;
    font-size: 1rem;
  }
  li a {
    color: #ffff;
    font-family: "Inconsolata", monospace;
    font-size: 1.5rem;
  }
  h4,
  .overskrift {
    color: white;
  }
  .overskrift {
    font-size: 1.7rem;
  }
  .footer-column {
    margin: 10px;
  }
  .link_aftercare {
    font-size: 1rem;
    text-decoration: underline;
    color: #ecc470;
  }
  .q_arrow {
    display: flex;
    justify-content: space-between;
    margin-right: 15px;
  }
  /** icons **/
  .grid1_3 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 10px;
    width: 30%;
  }
  .str {
    width: 90%;
  }

  /* pil */

  .arrow {
    transition: transform 0.3s ease-in-out;
    width: 6%;
  }
  .open .arrow {
    transform: rotate(180deg);
  }

  @media screen and (min-width: 800px) {
    .footer-columns {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 20px;
    }
    .footer-column {
      flex: 1;
      margin-right: 20px;
      margin: 20px;
    }
    .overskrift {
      font-size: 2.6rem;
      margin-top: 0;
      margin-bottom: 12px;
    }
    h4 {
      font-size: 1.2rem;
      margin-left: 10px;
    }
    li {
      font-size: 1.5rem;
    }
    /** icons **/
    .grid1_3 {
      width: 40%;
    }
    .str {
      width: 90%;
    }

    /**** LOGO ****/
    .logo_bottom {
      width: 45%;
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const faqItems = document.querySelectorAll(".faq-item");

    faqItems.forEach(function (item) {
      item.addEventListener("click", function () {
        const answer = this.querySelector(".answer");
        item.classList.toggle("open");
        answer.style.display =
          answer.style.display === "block" ? "none" : "block";

        // Hide other answers when one is clicked
        faqItems.forEach(function (otherItem) {
          if (otherItem !== item) {
            otherItem.classList.remove("open");
            otherItem.querySelector(".answer").style.display = "none";
          }
        });
      });
    });
  });
</script>
